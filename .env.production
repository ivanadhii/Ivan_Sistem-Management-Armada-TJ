# Server Configuration
FLEET_SERVER_HOST=0.0.0.0
FLEET_SERVER_PORT=3000

# Database Configuration
FLEET_DATABASE_HOST=your-postgres-host
FLEET_DATABASE_PORT=5432
FLEET_DATABASE_USER=postgres
FLEET_DATABASE_PASSWORD=your-super-secure-password-here
FLEET_DATABASE_DBNAME=transjakarta_fleet
FLEET_DATABASE_SSLMODE=require

# MQTT Configuration
FLEET_MQTT_BROKER=your-mqtt-broker
FLEET_MQTT_PORT=1883
